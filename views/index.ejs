<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <% if (locals.user) {%>
    <div class="page-container">
    <div class="links-container">
      <div class="create-container">
        <a href="/">File Uploader</a>
    <a href="/file/upload">Upload File</a>
    <a href="/folder/create">Create Folder</a>
    </div>
    <div class="logout-container">
    <p><%= user.username %></p>
    <a href="/log-out">Log Out</a>
    </div>
    </div>
    <div class="folder-container">
      <% folders.forEach(folder => { %>
        <div>
        <a class="folder" href="/folder/<%= folder.id %>"><%= folder.name %> </a>
        </div>
      <% }); %>
    </div>
    <div class="footer">
      <a href="https://www.flaticon.com/free-icons/folder" title="folder icons">Folder icons created by cahiwak - Flaticon</a>
    </div>
    </div>
  <% } else { %>
    <h1>please log in</h1>
    <a href="/sign-up">Sign Up</a>
    <a href="/log-in">Log In</a>
  <%}%>
</body>
</html>